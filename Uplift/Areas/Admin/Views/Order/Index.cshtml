@using Uplift.Utility

@{

    // determina o CSS a ser aplicado na <UL> de acordo com o que esta selecionado na URL
    var status = Context.Request.Query["status"];

    var approved = "text-white-50";
    var pending = "text-white-50";
    var all = "text-white-50";

    if (status == "approved")
    {
        approved = "active text-white font-weight-bold";
    }
    else
    {
        if (status == "pending")
        {
            pending = "active text-white font-weight-bold";
        }
        else
        {
            all = "active text-white font-weight-bold";
        }
    }

}



<div class="border backgroundWhite p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Order's List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                @*asp-route-status="pending" adiciona a query string /Order?status=pending na url *@
                <a style="text-decoration:none" asp-controller="Order" asp-route-status="pending" asp-action="Index">
                    <li class="list-group-item @pending">Pending</li>
                </a>
                <a style="text-decoration:none" asp-controller="Order" asp-route-status="approved" asp-action="Index">
                    <li class="list-group-item @approved">Approved</li>
                </a>
                <a style="text-decoration:none" asp-controller="Order" asp-route-status="all" asp-action="Index">
                    <li class="list-group-item @all">All</li>
                </a>
            </ul>
        </div>
    </div>

    <br /><br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Count</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>


</div>

@section Scripts{
    <script src="~/js/orders.js"></script>
}